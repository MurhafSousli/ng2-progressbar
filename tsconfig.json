{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "build",
    "lib": ["dom", "es2017"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@ngx-progressbar/*": ["../build/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "include": [
    "build/**/*.ts",
    "src/**/*.ts"
  ],
  "compileOnSave": false
}
